@{
}
@model List<crudapi.Models.Empleado>
<div class="row">
    <div class="col-sm-8 offset-sm-2">
        <h2>Lista de empleados</h2>
        <a asp-controller="Empleado" asp-action="NuevoEmpleado" class="btn btn-success mb-3">Nuevo</a>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Email</th>
                    <th>Fecha de Contrato</th>
                    <th>Actividad</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @*usar codigo c#: siempre con @ por delante*@
                @foreach(var item in Model)
                {
                    <tr>
                        <td>@item.IdEmpleado</td>
                        <td>@item.Nombre</td>
                        <td>@item.Email</td>
                        <td>@item.FechaContrato.ToString("dd/MM/yyyy")</td>
                        <td>@(item.Actividad ? "Si" : "No")</td>
                        <td>
                            <a asp-controller="Empleado" asp-action="Editar" asp-route-id="@item.IdEmpleado" class="btn btn-primary">Editar</a>
                            <a asp-controller ="Empleado" asp-action = "Eliminar" asp-route-id = "@item.IdEmpleado" onclick= "return confirmar()" class= "btn btn-danger">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        
    </div>
</div>

                        @section Scripts{
                            <script>
                                function confirmar(){
                                   return confirm("¿Estas seguro de eliminar este empleado?")
                                }
                            </script>
                        }